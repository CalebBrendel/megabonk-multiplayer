<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>MegabonkMultiplayer</AssemblyName>
    <RootNamespace>MegabonkMultiplayer</RootNamespace>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <Deterministic>true</Deterministic>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <!-- Put these DLLs in repo at: lib/managed/ -->
  <!--  - MelonLoader.dll                               (from game: MelonLoader/MelonLoader.dll)
        - 0Harmony.dll                                  (from game: MelonLoader/Managed/net35/0Harmony.dll)
        - UnityEngine.CoreModule.dll                    (from Unity 2023.2.20f1)
        - UnityEngine.InputLegacyModule.dll             (from Unity 2023.2.20f1)
        - UnityEngine.IMGUIModule.dll                   (from Unity 2023.2.20f1)
  -->
  <ItemGroup>
    <Reference Include="MelonLoader">
      <HintPath>..\..\lib\managed\MelonLoader.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Harmony must match the assembly name INSIDE the DLL: "0Harmony" -->
    <Reference Include="0Harmony">
      <HintPath>..\..\lib\managed\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..\..\lib\managed\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="UnityEngine.InputLegacyModule">
      <HintPath>..\..\lib\managed\UnityEngine.InputLegacyModule.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Needed for GUI / GUILayout (IMGUI) -->
    <Reference Include="UnityEngine.IMGUIModule">
      <HintPath>..\..\lib\managed\UnityEngine.IMGUIModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Pull in LiteNetLib source (including Utils/ and Layers/) -->
  <ItemGroup>
    <Compile Include="..\..\third_party\LiteNetLib\**\*.cs" />
  </ItemGroup>

  <!-- Optional: auto-copy to Mods on Windows if you set GameDir -->
  <!-- Example:
  <PropertyGroup>
    <GameDir>C:\Program Files (x86)\Steam\steamapps\common\Megabonk</GameDir>
  </PropertyGroup>
  -->
  <PropertyGroup Condition="'$(OS)' == 'Windows_NT' and '$(GameDir)' != '' and Exists('$(GameDir)')">
    <PostBuildEvent>
      if not exist "$(GameDir)\Mods" mkdir "$(GameDir)\Mods"
      copy /Y "$(TargetPath)" "$(GameDir)\Mods\$(TargetFileName)"
    </PostBuildEvent>
  </PropertyGroup>
</Project>
